{% extends "../layout-full-width.njk" %}

{% block pageTitle %}
My profile - GOV.UK Pay
{% endblock %}

{% block mainContent %}
<div class="govuk-grid-column-full">
  <h1 id="details-for" class="govuk-heading-l page-title">
      My profile
  </h1>
</div>
<div class="govuk-grid-column-two-thirds">
  <table class="govuk-table">
    <caption class="govuk-visually-hidden">Details for {{username}}</caption>
    <tbody class="govuk-table__body">
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="row">Email</th>
        <td class="govuk-table__cell" colspan="2" id="email">{{email}}</td>
      </tr>
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="row">Mobile number</th>
        <td class="govuk-table__cell" id="telephone-number">{{telephone_number}}</td>
        <td class="govuk-table__cell pay-text-align-right">
          <a id="change-phone-link" class="govuk-link" href="{{routes.user.phoneNumber}}">Change</a>
        </td>
      </tr>
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="row">Sign-in method</th>
        <td class="govuk-table__cell" id="two-factor-auth">
          {% if two_factor_auth === 'APP' %}
            Authenticator app
          {% endif %}
          {% if two_factor_auth === 'SMS' %}
            Text message
          {% endif %}
        </td>
        <td class="govuk-table__cell pay-text-align-right">
          <a class="govuk-link" href="{{two_factor_auth_link}}">Change</a>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="govuk-grid-column-one-third">
  <div class="related-information">
    <p class="govuk-body govuk-!-font-size-16">To change your permission level on a service you need to contact an administrator for that service.</p>
  </div>
</div>
{% endblock %}
